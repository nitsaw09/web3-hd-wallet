{
  "name": "web3-hd-wallet",
  "version": "1.0.1",
  "description": "Ethereum HD Wallet",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "jest --coverage -c ./jest.unit.json",
    "test:watch": "jest --watch -c ./jest.unit.json"
  },
  "author": "@nitsaw09",
  "license": "ISC",
  "keywords": [
    "ethereum",
    "hd",
    "wallet",
    "mnemonic",
    "provider"
  ],
  "dependencies": {
    "bip39": "^3.1.0",
    "ethereumjs-wallet": "^1.0.2",
    "hdkey": "^2.1.0",
    "web3": "^1.10.0"
  },
  "devDependencies": {
    "@types/hdkey": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.5",
    "@types/web3": "^1.2.2",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
